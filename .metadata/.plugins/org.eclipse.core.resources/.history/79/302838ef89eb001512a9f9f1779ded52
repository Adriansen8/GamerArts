/* 2. Incrementer & decrementer
-----------------------------------------------------------------------------------------
*/
function fijarMenuSuperior(){
	var altura = $('.navbar-static-top').offset().top;
	$(window).on('scroll',function(){
		if($(window).scrollTop() > altura ){
			$('.navbar').addClass('menu-fixed');
		}else{
			$('.navbar').removeClass('menu-fixed');
		}
	}); 
}

